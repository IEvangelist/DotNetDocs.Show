@inherits CountDownTimerComponent

<div class="shadow bg-light p-2 text-center">
    <p class="mb-0 font-weight-bold text-dotnet text-uppercase">Next show</p>
    <div class="countdown rounded pt-2 text-muted">
        <span class="h2 font-weight-bold">@TimeRemaining.Days</span> @(TimeRemaining.Days > 1 ? "days" : "day")
        <span class="h2 font-weight-bold">@TimeRemaining.Hours</span> hr
        <span class="h2 font-weight-bold">@TimeRemaining.Minutes</span> min
        <span class="h2 font-weight-bold">@TimeRemaining.Seconds</span> sec
    </div>
</div>
