<div class="grid">
    <div class="grid-clouds">
        <!-- TODO: Add azure clouds here, stagger, opacity, etc...-->
    </div>

    <div class="grid-logo">
        <div class="preparing-for-blast-off">
            <svg width="344" height="346">
                <image xlink:href="dotnet-bot_jetpack.svg" width="344" height="346"></image>
            </svg>
        </div>
        <div class="d-flex align-items-center">
            <strong class="text-dotnet">@(LoadingMessage)</strong>
            <div class="spinner-border text-dotnet ml-auto" role="status" aria-hidden="true"></div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string LoadingMessage { get; set; } = "Buckle up, we're taking off...";
}
